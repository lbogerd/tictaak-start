{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		// include all files except node_modules, .tanstack, .env[*], and routeTree.gen.ts
		"includes": [
			"**",
			"!**/node_modules",
			"!**/.env*",
			"!**/drizzle",
			// ignore build output
			"!**/routeTree.gen.ts",
			"!**/.tanstack",
			"!**/.nitro",
			"!**/.output",
			// biome cannot handle tailwind css apply stuff, ignore it
			"!src/styles.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "unsafe"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	}
}
